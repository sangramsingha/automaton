{
    "name": "automaton",
    "displayName": "Automaton",
    "description": "Run macro on file open, repetitive actions with custom macros at your finger tip",
    "version": "0.0.4",
    "publisher": "Sango",
    "repository": "https://github.com/sangramsingha/automaton",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "icon": "images/icon.png",
    "main": "./extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Automaton configuration",
            "properties": {
                "automaton.list": {
                    "type": "object",
                    "title" : "Macro defination",
                    "description": "Define custom macro"
                },
                "automaton.qp-ignore": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true,
                    "description": "exclude commands from the quick-pick"
                },
                "automaton.qp-allow": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true,
                    "description": "include commands to the quick-pick"
                }
            }
        },
        "commands": [
            {
                "command": "automaton.execute",
                "title": "Automaton: Execute"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
